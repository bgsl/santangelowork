float ballY = 30;
float ballSize = 100;
int i;



void setup(){
  size(600, 600);
}
void draw() 

{
  fill(0);
  rect(0,0,width, height);
  i = 0;
  while (i < 300) {
    fill(255);
    drawBall(i);
    
    i = i + 1 ;
  }


}

void drawBall(float x) {
fill(x,mouseX,100);
  ellipse(random(0,width)+x, random(0,height)+x, 30,30);
}

